<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="@dimen/colors_list_preference_padding"
    android:paddingStart="@dimen/colors_list_preference_padding">

    <LinearLayout
        android:id="@+id/custom_list_preference_texts"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:gravity="start"
        android:orientation="vertical"
        android:paddingBottom="@dimen/colors_list_preference_padding"
        android:paddingTop="@dimen/colors_list_preference_padding">

        <TextView
            android:id="@+id/custom_list_preference_title"
            style="@style/Base.TextAppearance.AppCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textSize="@dimen/colors_list_preference_title_size" />

        <TextView
            android:id="@+id/custom_list_preference_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start" />

    </LinearLayout>

    <ImageView
        android:id="@+id/custom_list_preference_imageColor"
        android:layout_width="@dimen/colors_list_preference_imageView_size"
        android:layout_height="@dimen/colors_list_preference_imageView_size"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/colors_list_preference_imageView_margin_vertical"
        android:layout_marginEnd="@dimen/colors_list_preference_imageView_margin_horizontal"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_color_item_solid_24dp"
        android:contentDescription="@string/color_preview" />

</RelativeLayout>